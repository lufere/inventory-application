extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='name') Brand Name:
            input#name.form-control(type='text' placeholder='Name' name='name' value=(brand? brand.name:''))
            label(for='description') Description:
            textarea#description.form-control(placeholder='Description' name='description') #{brand? brand.description:''}
            label(for='website') Brand Website:
            input#website.form-control(type='text' placeholder='Website' name='website' value!=(brand? brand.website:''))

        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!=error.msg
