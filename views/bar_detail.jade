extends layout

block content
    h1 #{bar.brand? bar.brand.name:'Unbranded'} #{bar.type} Bar

    p #[strong Price:] #{bar.price} $
    if bar.stock==1
        p.text-warning #[strong Stock:] #{bar.stock}
    else if bar.stock>0
        p.text-success #[strong Stock:] #{bar.stock}
    else
        p.text-danger #[strong Stock:] #{bar.stock}
    p #[strong Weight:] #{bar.weight} #{bar.unit}
    p #[strong Olympic diameter:] #{bar.olympic? 'Yes': 'No'}
